<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.edu.ittepic.juegoarturo.menu">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fondologin"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/LL">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ยก B I E N V E NI D O !"
            android:textSize="50dp"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:id="@+id/txttitulo"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccione el juego al que desea Ingresar!"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textSize="25dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batalla Pokemon"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:id="@+id/J1"
            android:onClick="juego1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carreras Pokemon"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:id="@+id/J2"
            android:onClick="juego2" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GENGAR MORTAL"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:id="@+id/J3"
            android:onClick="juego3"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acerca de"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:id="@+id/AD"
            android:onClick="acercaDe"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salir"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:id="@+id/SLR"
            android:onClick="salir"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="texto bien perron"
        android:id="@+id/btnprueba"
        />

</RelativeLayout>
